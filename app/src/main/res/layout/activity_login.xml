<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:text="Email-Id"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:hint="abc@xyz.com"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/pwd_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginBtns"
        android:layout_below="@+id/pwd"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <Button
            android:id="@+id/facultyLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty Login" />

        <Button
            android:id="@+id/studentLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/facultyLogin"
            android:layout_marginLeft="15dp"
            android:text="Student Login" />
    </LinearLayout>

    <TextView
        android:id="@+id/newCustomer_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginBtns"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="New to Classroom Organizer?"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Classroom Organizer"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_below="@id/newCustomer_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>



</RelativeLayout>